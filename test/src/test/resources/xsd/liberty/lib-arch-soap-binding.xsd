  <!-- message correlation header block -->

  <xs:complexType
    name="CorrelationType">
    <xs:attribute
      name="messageID"
      type="sb:IDType"
      use="required"/>
    <xs:attribute
      name="refToMessageID"
      type="sb:IDType"
      use="optional"/>
    <xs:attribute
      name="timestamp"
      type="xs:dateTime"
      use="required"/>
    <xs:attribute
      name="id"
      type="xs:ID"
      use="optional"/>
    <xs:attribute
      ref="s:mustUnderstand"
      use="optional"/>
    <xs:attribute
      ref="s:actor"
      use="optional"/>
  </xs:complexType>

  <xs:element
    name="Correlation"
    type="sb:CorrelationType"/>

  <!-- provider= header block  -->

  <xs:complexType
    name="ProviderType">
    <xs:attribute
      name="providerID"
      type="xs:anyURI"
      use="required"/>
    <xs:attribute
      name="affiliationID"
      type="xs:anyURI"
      use="optional"/>
    <xs:attribute
      name="id"
      type="xs:ID"
      use="optional"/>
    <xs:attribute
      ref="s:mustUnderstand"
      use="optional"/>
    <xs:attribute
      ref="s:actor"
      use="optional"/>
  </xs:complexType>

  <xs:element
    name="Provider"
    type="sb:ProviderType"/>

  <!-- processing context header block -->

  <xs:complexType
    name="ProcessingContextType">
    <xs:simpleContent>
      <xs:extension
        base="xs:anyURI"/>
    </xs:simpleContent>
  </xs:complexType>


  <xs:element
    name="ProcessingContext"
    type="sb:ProcessingContextType"/>

  <!-- consent claim header block -->

  <xs:complexType
    name="ConsentType">
    <xs:attribute
      name="uri"
      type="xs:anyURI"
      use="required"/>
    <xs:attribute
      name="timestamp"
      type="xs:dateTime"
      use="optional"/>
    <xs:attribute
      name="id"
      type="xs:ID"
      use="optional"/>
    <xs:attribute
      ref="s:mustUnderstand"
      use="optional"/>
    <xs:attribute
      ref="s:actor"
      use="optional"/>
  </xs:complexType>

  <xs:element
    name="Consent"
    type="sb:ConsentType"/>

  <!-- usage directive header block -->

  <xs:complexType
    name="UsageDirectiveType">
    <xs:sequence>
      <xs:any
        maxOccurs="unbounded"
        namespace="##other"
        processContents="lax"/>
    </xs:sequence>
    <xs:attribute
      name="id"
      type="xs:ID"
      use="optional"/>
    <xs:attribute
      name="ref"
      type="xs:IDREF"
      use="required"/>
    <xs:attribute
      ref="s:mustUnderstand"
      use="optional"/>
    <xs:attribute
      ref="s:actor"
      use="optional"/>
  </xs:complexType>

  <xs:element
    name="UsageDirective"
    type="sb:UsageDirectiveType"/>

</xs:schema>
